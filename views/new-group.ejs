<% include partials/header %>

<div class="container">
    <h1>Create New Group</h1>
    <div class="row">
        <form class="col s12" action="/groups" method="POST">
            <div class="row">
                <div class="input-field col s12">
                    <input class="validate" name="name" id="name" type="text">
                    <label for="name">Group Name</label>
                </div>
                <div class="input-field col s12">
                    <input class="validate" name="image" id="image" type="text">
                    <label for="image">Group Image Url</label>
                </div>
                <div class="input-field col s12">
                    <textarea id="description" class="materialize-textarea" name="description"></textarea>
                    <label for="description">Description</label>
                </div>
                <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
                    <i class="material-icons right">send</i>
                </button>
            </div>
        </form>
    </div>
</div>


<% include partials/footer %>