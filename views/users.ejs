<% include partials/header %>

<div class="container">
    <h1>This will be the list of users...</h1>
    <div class="row">
        <% users.forEach(function(users){ %>
            <div class="col s6 m4 l3">
                <div class="card-panel grey lighten-5 z-depth-1">
                    <div class="row valign-wrapper">
                        <div class="col s4">
                            <img src="<%= users.profile_picture %>" class="circle responsive-img">
                        </div>
                        <div class="col s8">
                            <h6 class="black-text">
                                <%= users.first_name %> <%= users.last_name %>
                            </h6>
                            <a href="#" class="btn-small blue">View Profile</a>
                        </div>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>


<% include partials/footer %>