<% include partials/header %>

<div class="container">
    <h1>Groups</h1>
    <% if(currentUser) { %>
        <a href="/groups/new" class="btn blue lighten-2 waves-effect waves-orange">Add New Group</a>
    <% } %>
    <div class="row">
        <% groups.forEach(function(groups){ %>
            <div class="col s12 m6 l4">
                <div class="card hoverable">
                    <div class="card-image">
                        <img src="<%= groups.image %>">
                        <span class="card-title"><%= groups.name %></span>
                        <a class="btn-floating halfway-fab waves-effect waves-light blue pulse" href="/groups/<%= groups._id %>"><i class="material-icons">add</i></a>
                    </div>
                    <div class="card-content">
                        <p class="truncate"><%= groups.description %></p>
                    </div>
                </div>
            </div>
        <% }); %>
    </div>        
</div>

<% include partials/footer %>