<% include partials/header %>

<div class="container">
    <div class="row">
        <div class="col sm-12">
            <h1 class="title"><%= therapy.name %></h1>
        </div>
    </div>
    <div class="row">
        <div class="col sm-4">
            <img src="<%= therapy.image %>">
        </div>
        <div class="col sm-8">
            <p><%= therapy.description %></p>
        </div>
    </div>
    <hr>
    <% therapy.comments.forEach(function(comment){ %>
        <div class="col s12 m8 offset-m2 l6 offset-l3">
            <div class="card-panel grey lighten-5 z-depth-3">
                <div class="row valign-wrapper">
                <div class="col s2">
                    <img src="<%= comment.author.profile_picture %>" alt="" class="circle responsive-img">                    
                </div>
                <div class="col s10">
                    <span class="black-text">
                        <p><strong><%= comment.author.username %></strong></p>                        
                        <%= comment.text %>
                    </span>
                </div>
                </div>
            </div>
        </div>
    <% }) %>

    <% if(!currentUser){ %>
        <p class="right-align">Log in to add comment...</p>
    <% } else { %>
        <div class="row">
            <form class="col s12" action="/therapies/<%= therapy._id %>/comments" method="POST">
                <div class="row">
                    <div class="input-field col s12">
                        <textarea id="taComment" class="materialize-textarea" name="comment[text]"></textarea>
                        <label for="taComment">Add a comment...</label>
                    </div>
                    <button class="btn waves-effect waves-light blue" type="submit" name="action">Submit
                        <i class="material-icons right">send</i>
                    </button>
                </div>
            </form>
        </div>
    <% } %>
</div>

<% include partials/footer %>