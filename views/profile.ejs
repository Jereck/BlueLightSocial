<% include partials/header %>

<div class="top-margin">
    <div class="tile is-ancestor">
        <div class="tile is-4">
            <div class="tile">
                <div class="tile is-parent is-verticle">
                    <article class="tile is-child notification box has-text-centered">
                        <p class="title"><%= currentUser.first_name %> <%= currentUser.last_name %></p>
                        <figure class="image is-4by3">
                            <img src="<%= currentUser.profile_picture %>">
                        </figure>
                    </article>
                </div>
            </div>
        </div>
        <div class="tile is-parent">
            <article class="tile is-child notification box">
                <div class="content">
                    <p class="title">Status Update...</p>
                    <form>
                        <div class="field">
                            <textarea class="textarea" placeholder="What's on your mind..." rows="10"></textarea>
                        </div>
                        <div class="control">
                            <button class="button">Submit</button>
                        </div>
                    </form>
                </div>
            </article>
        </div>
    </div>
</div>

<% include partials/footer %>